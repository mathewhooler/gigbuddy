<%- include('../partials/header') %>

<link rel="stylesheet" href="/Users/mathewhooler/code/GA/PROJECT 2/gig-buddy/gigbuddy/public/stylesheets/style.css">

<% if (user) { %>
  <table id="list">
    <thead>
      <tr>
        <th><%= title %></th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% gigs.forEach(function(m) { %>
        <tr>
          <td><%= m.title %></td>
          <td>
            <a href="/gigs/<%= m._id %>">DETAILS</a>
            <form method="PUT" action="/gigs/<%= m._id %>" style="display: inline;" class="update-button">
              <button type="submit">EDIT</button>
            </form>
            <form method="DELETE" action="/gigs/<%= m._id %>" style="display: inline;" class="delete-button">
              <button type="submit">DELETE</button>
            </form>
          </td>
        </tr>
      <% }); %>
    </tbody>
  </table>
  <% } %>
  
  
<%- include('../partials/footer') %>
