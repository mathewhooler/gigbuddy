<%- include('../partials/header') %>

<section id="show-page">
  <div class="image-container">
    <img src="your_image.jpg" alt="Your Image">
  </div>
  <div><%=title%></div>
  <div><%= gig.title %></div>
  <div>Date: </div>
  <div><%= gig.date %></div>
  
</section>

<% if (gig.details.length) { %>
  <table>
    <thead>
      <tr>
        <th>User</th>
        <th>Date</th>
        <th>Details</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% let total = 0 %>
      <% details.forEach(function(r) { %>
        <% total += r.rating %>
        <tr>
          <td class="details-user"><img alt="avatar" src="<%= r.userAvatar %>" referrerpolicy="no-referrer" ><%= r.userName %></td>
          <td><%= r.createdAt.toLocaleDateString() %></td>
          <td><%= r.content %></td>
          <td><%= r.rating %></td>
          <td>
            <% if (user?._id.equals(r.user)) { %>
              <form action="/details/<%= r._id %>?_method=DELETE" method="POST">
                <button type="submit">X</button>
              </form>
            <% } %>
          </td>
        </tr>
      <% }); %>
      <tr>
        <td colspan="3"></td>
        <td><strong><%= (total / gig.details.length).toFixed(1) %></strong></td>
      </tr>
    </tbody>
  </table>
<% } else { %>
  <h5>No Details Yet</h5>
<% } %>



<%- include('../partials/footer') %>
