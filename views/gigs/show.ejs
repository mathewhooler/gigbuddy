<%- include('../partials/header') %>

<section id="show-page">
  <div class="image-container">
    <img src="your_image.jpg" alt="Your Image">
  </div>
  
  <div>Venue: </div>
  <div><%= gig.title %></div>
  <div>Date: </div>
  <div><%= gig.date %></div>
</section>

<br><br><h2>Details</h2>
<form id="add-details-form" method="POST"
  action="/gig/<%= gig._id %>/details">
  <label>Details:</label>
  <input type="text" name="venue">
  <label>Support:</label>
  <input type="text" name="support">
  <label>Time:</label>
  <input type="text" id="time" name="time">
  <label>Price:</label>
  <input type="text" name="price">
  <label>Ticket Link:</label>
  <input type="url" name="website">
  <label>Spotify Link:</label>
  <input type="url" name="website">
</form>

<% if (gig.details.length) { %>
  <table>
    <thead>
      <tr>
        <th>User</th>
        <th>Date</th>
        <th>Review</th>
        <th>Rating</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% let total = 0 %>
      <% movie.reviews.forEach(function(r) { %>
        <% total += r.rating %>
        <tr>
          <td class="review-user"><img alt="avatar" src="<%= r.userAvatar %>" referrerpolicy="no-referrer" ><%= r.userName %></td>
          <td><%= r.createdAt.toLocaleDateString() %></td>
          <td><%= r.content %></td>
          <td><%= r.rating %></td>
          <td>
            <% if (user?._id.equals(r.user)) { %>
              <form action="/reviews/<%= r._id %>?_method=DELETE" method="POST">
                <button type="submit">X</button>
              </form>
            <% } %>
          </td>
        </tr>
      <% }); %>
      <tr>
        <td colspan="3"></td>
        <td><strong><%= (total / movie.reviews.length).toFixed(1) %></strong></td>
      </tr>
    </tbody>
  </table>
<% } else { %>
  <h5>No Reviews Yet</h5>
<% } %>



<%- include('../partials/footer') %>
